{
    "image": "malkab/python:3.11-bullseye",
    "name": "pylogseq-dev-container",
    "workspaceFolder": "/home/git/mlktools/mlktools-pylogseq/",

    "runArgs": [
        "--network=host",
        "--name=pylogseq-dev-container"
    ],

    "customizations": {
        "vscode": {
        "extensions": [
            "charliermarsh.ruff",
            "donjayamanne.python-environment-manager",
            "GitHub.copilot-chat",
            "GitHub.copilot",
            "mechatroner.rainbow-csv",
            "mhutchie.git-graph",
            "ms-python.python",
            "njpwerner.autodocstring",
            "redhat.vscode-yaml",
            "tamasfe.even-better-toml",
            "Tyriar.lorem-ipsum"
        ]
        }
    },

    // ID here, not user name
    "remoteUser": "1000",

    // Add ENVVARS to the container here:
    // "SOMETHING": "A_VALUE"
    // The given example is known to make the dev container to fail on startup
    // provided only as an example, investigate
    "containerEnv": {
        // "PATH": "${PATH}:/home/user1000/.local/bin"
    },

    // Add remote ENVVARS to the container here:
    // "SOMETHING": "SOMETHING:${localEnv:SOMETHING}"
    "remoteEnv": { },

    // Add mounts here:
    // "type=bind,source=/something,target=/something,readonly"
    "mounts": [
        "type=bind,source=${localEnv:HOME}/.mlkctxt,target=/home/user1000/.mlkctxt,readonly",
        "type=bind,source=${localEnv:HOME}/.gitconfig,target=/home/user1000/.gitconfig,readonly",
        "type=bind,source=/home/git/mlktools/mlktools-pylogseq/,target=/home/git/mlktools/mlktools-pylogseq/"
    ],

    "postCreateCommand": "bash -c \"./.devcontainer/assets/post_install.sh\"",

    "postStartCommand": "bash -c \"echo postStartCommand\""
}
